<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/darkgrey"
    android:fillViewport="true"
    tools:context=".SettingsFragment">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <FrameLayout
            android:id="@+id/container"
            android:layout_width="match_parent"
            android:layout_height="1221dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="1221dp"
                android:layout_marginTop="50dp"
                android:background="@drawable/bg1"
                android:orientation="vertical"
                tools:context=".MainActivity">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"

                    android:paddingLeft="25dp"
                    android:paddingTop="30dp"
                    android:paddingRight="25dp">

                    <TextView
                        android:id="@+id/t1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:text="Welcome Back,"
                        android:textColor="@color/limegreen"
                        android:textSize="25dp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/textviewWelcome2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/t1"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="10dp"
                        android:layout_marginBottom="20dp"
                        android:fontFamily="sans-serif-black"
                        android:letterSpacing="0.04"
                        android:text="LOADING..."
                        android:textColor="@color/white"
                        android:textSize="23dp"
                        android:textStyle="bold" />
                </RelativeLayout>

                <LinearLayout
                    android:layout_width="385dp"
                    android:layout_height="187dp"
                    android:layout_gravity="center"
                    android:background="@drawable/inforgraphic1"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingLeft="40dp"
                        android:paddingTop="40dp"
                        android:text="Total Income"
                        android:textColor="#fff"
                        android:textSize="22dp" />

                    <TextView
                        android:id="@+id/counts2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="sans-serif-black"
                        android:paddingLeft="40dp"
                        android:paddingTop="10dp"
                        android:text="₱0.00"
                        android:textColor="#fff"
                        android:textSize="35dp"
                        android:textStyle="bold" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="385dp"
                    android:layout_height="173dp"
                    android:layout_gravity="center"
                    android:background="@drawable/inforgraphic1"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingLeft="40dp"
                        android:paddingTop="40dp"
                        android:text="Income Today"
                        android:textColor="#fff"
                        android:textSize="22dp" />

                    <TextView
                        android:id="@+id/counts"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="sans-serif-black"
                        android:paddingLeft="40dp"
                        android:paddingTop="10dp"
                        android:text="₱0.00"
                        android:textColor="#fff"
                        android:textSize="35dp"
                        android:textStyle="bold" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="385dp"
                    android:layout_height="173dp"
                    android:layout_gravity="center"
                    android:background="@drawable/inforgraphic3"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingLeft="40dp"
                        android:paddingTop="40dp"
                        android:text="Changer Stack"
                        android:textColor="#fff"
                        android:textSize="22dp" />

                    <TextView
                        android:id="@+id/changer"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="sans-serif-black"
                        android:paddingLeft="40dp"
                        android:paddingTop="10dp"
                        android:text="₱0.00"
                        android:textColor="#fff"
                        android:textSize="35dp"
                        android:textStyle="bold" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="385dp"
                    android:layout_height="176dp"
                    android:layout_gravity="center"
                    android:layout_marginTop="1dp"
                    android:background="@drawable/inforgraphic2"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingLeft="40dp"
                        android:paddingTop="40dp"
                        android:text="Water Level"
                        android:textColor="#fff"
                        android:textSize="22dp" />

                    <TextView
                        android:id="@+id/waterlevel"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="sans-serif-black"
                        android:paddingLeft="40dp"
                        android:paddingTop="10dp"
                        android:text="100"
                        android:textColor="#fff"
                        android:textSize="35dp"
                        android:textStyle="bold" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="385dp"
                    android:layout_height="187dp"
                    android:layout_gravity="center"
                    android:background="@drawable/inforgraphic1"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingLeft="40dp"
                        android:paddingTop="40dp"
                        android:text="Machine Status"
                        android:textColor="#fff"
                        android:textSize="22dp" />

                    <TextView
                        android:id="@+id/machinestatus"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="sans-serif-black"
                        android:paddingLeft="40dp"
                        android:paddingTop="10dp"
                        android:text=""
                        android:textColor="#fff"
                        android:textSize="25dp"
                        android:textStyle="bold" />

                </LinearLayout>
            </LinearLayout>
        </FrameLayout>
    </LinearLayout>
</ScrollView>